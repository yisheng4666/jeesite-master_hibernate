	/**
	 * 获取用户的id
	 * 
	 * @author JianHui
	 * @param list
	 * @return
	 */
	private String[] getUserIds(List<AssementUser> list) {
		if (list.size() == 0) {
			return null;
		} else {
			String[] ids = new String[list.size()];
			for (int i = 0; i < ids.length; i++) {
				ids[i] = list.get(i).getUser().getId();
			}
			return ids;
		}
	}

