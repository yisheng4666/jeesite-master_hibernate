<%@ page contentType="text/html;charset=UTF-8" %>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<html>
<head>
	<title>菜单管理</title>
	<meta name="decorator" content="default"/>
	<%@include file="/WEB-INF/views/include/treetable.jsp" %>
	<style type="text/css">.table td i{margin:0 2px;}</style>
	<script type="text/javascript">
		$(document).ready(function() {
			$("#treeTable").treeTable({expandLevel : 3});
		});
    	function updateSort() {
			loading('正在提交，请稍等...');
	    	$("#listForm").attr("action", "${ctx}/aprs/assementUser/updateSort");
	    	$("#listForm").submit();
    	}
	</script>
</head>
<body>
	<ul class="nav nav-tabs">
		<li class="active"><a href="${ctx}/aprs/assementUser/">被考评单位列表</a></li>
		<shiro:hasPermission name="aprs:assementUser:edit"><li><a href="${ctx}/aprs/assementUser/form">被考评单位添加</a></li></shiro:hasPermission>
	</ul>
	<tags:message content="${message}"/>
	<form id="listForm" method="post">
		<table id="treeTable" class="table table-striped table-bordered table-condensed">
			<tr><th>名称</th><<th style="text-align:center;">排序</th><shiro:hasPermission name="aprs:assementUser:edit"><th>操作</th></shiro:hasPermission></tr>
			<c:forEach items="${list}" var="aut">
				 <%--  --%>
				<tr id="${aut.id}" pId="${aut.office.id ne '1' ? aut.office.id : '0'}">
					<td><a href="${ctx}/aprs/assementUser/form?id=${aut.id}">${aut.userName}</a></td>
					<td style="text-align:center;">
						<shiro:hasPermission name="aprs:assementUser:edit">
							<input type="hidden" name="ids" value="${aut.id}"/>
							<input name="sorts" type="text" value="${aut.organizationNo}" style="width:50px;margin:0;padding:0;text-align:center;">
						</shiro:hasPermission><shiro:lacksPermission name="aprs:assementUser:edit">
							${aut.organizationNo}
						</shiro:lacksPermission>
					</td>
					<shiro:hasPermission name="aprs:assementUser:edit"><td>
						<c:if test="${aut.office.id==null }">
							<a href="${ctx}/aprs/assementUser/deleteByoffice?officeId=${aut.office.id}" onclick="return confirmx('要删除该被考评组及所有被考评单位吗？', this.href)">删除</a>
							<a href="${ctx}/aprs/assementUser/form?office.id=${aut.office.id}">添加被考评单位</a> 
						</c:if>
						<c:if test="${aut.office.id!=null }">
							<a href="${ctx}/aprs/assementUser/form?id=${aut.id}">修改</a>
							<a href="${ctx}/aprs/assementUser/delete?id=${aut.id}" onclick="return confirmx('要删除该被考评单位吗？', this.href)">删除</a>
						</c:if>
					</td></shiro:hasPermission>
				</tr>
			</c:forEach>
		</table>
		<shiro:hasPermission name="aprs:assementUser:edit"><div class="form-actions pagination-left">
			<input id="btnSubmit" class="btn btn-primary" type="button" value="保存排序" onclick="updateSort();"/>
			<div class="pull-right">
				<a class="btn btn-warning" href="${ctx}/aprs/assementUser/synToActiviti" onclick="return confirmx('确认要同步所有系统权限数据到工作流？', this.href)">同步工作流权限</a>
			</div>
		</div></shiro:hasPermission>
	 </form>
</body>
</html>
